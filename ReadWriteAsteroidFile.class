import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Scanner;

import javax.swing.JOptionPane;

public class ReadWriteAsteroidFile {

	private Integer score;
	private String name;
	
	ArrayList <String> sorted = new ArrayList<String>();
	
public ReadWriteAsteroidFile(Integer score, String name) {
		this.score = score;
		this.name = name;
	}

public ArrayList<String> sort(ArrayList<String>fullLine) {
	
	int idx1, idx2;
	String try1,try2;
	int try1Int, try2Int;
	String temp;
	
	for(int pass=0; pass<fullLine.size();pass++) {
		for(int i=1; i<fullLine.size(); i++) {
			
			idx1=fullLine.get(i-1).lastIndexOf(": ");
			idx2=fullLine.get(i).lastIndexOf(": ");
			
			try1=fullLine.get(i-1).substring(idx1+2, fullLine.get(i-1).length());
			try2=fullLine.get(i).substring(idx2+2, fullLine.get(i).length());
			
			try1Int=Integer.parseInt(try1);
			try2Int=Integer.parseInt(try2);
			
			if(try1Int<try2Int) {
				temp = fullLine.get(i-1);
				fullLine.set(i-1, fullLine.get(i));
				fullLine.set(i, temp);
			}
		}
	}
	return fullLine;
}

public void writeFile(){
		try {
			
			FileWriter fileWriter = new FileWriter("AsteroidScores", true);
			BufferedWriter bufferedREader = new BufferedWriter(fileWriter);
			bufferedREader.write(name+": "+Integer.toString(score)+"\n");
			bufferedREader.close();
		
		} catch (IOException e){
			System.out.print("Exception "+e);
		} 
		
		try {
			FileReader fileReader = new FileReader("AsteroidScores");
			BufferedReader bufferedReader = new BufferedReader(fileReader);
	
			String line; 			
			ArrayList <String> fullLine=new ArrayList<String>();
			
			while((line = bufferedReader.readLine()) != null) {
				fullLine.add(line);
			}
			
			sorted = sort(fullLine);
			
			bufferedReader.close();
		} catch(IOException e) {
			System.out.print("Exception "+e);
		}
		
		try {
			
			FileWriter fileWriter = new FileWriter("AsteroidScores");
			BufferedWriter bufferedWriter = new BufferedWriter(fileWriter);

			for(int i=0; i<sorted.size();i++) {
				bufferedWriter.write(sorted.get(i)+"\n");
			}
			bufferedWriter.close();
		
		} catch (IOException e){
			System.out.print("Exception "+e);
		}
	}
	
	public void topScore() {
		String topTen="\n";
		
		try {
			FileReader fileReader = new FileReader("AsteroidScores");
			BufferedReader bufferedReader = new BufferedReader(fileReader);
			String line; 
			
			File file = new File("AsteroidScores"); 
			
			int i=0;
			while((line = bufferedReader.readLine()) != null&&i<10) {
				topTen=topTen+line+"\n";
				i++;
			}
			
			JOptionPane.showMessageDialog(null, topTen, "TOP SCORES", JOptionPane.INFORMATION_MESSAGE);
		
		} catch (FileNotFoundException e) {
			System.out.print("Exception "+e);
		} catch (IOException e) {
			System.out.print("Exception "+e);
		}
	}
}
